@model Question;

<div>
    <span><h1 class="text-center text-info">ACC Map Decision - Edit Question <form asp-controller="Admin" asp-action="Logout" ><input class="btn btn-info" type="Submit" value="Logout"></form></h1></span>
    <span id="lblExpire" class="text-warning" style="margin-left:10px; font-size: medium;"></span>

    <div class="container">
        <div stlye="padding-bottom: 10px">
            <h1 class="text-center text-info">Editing @Model.questionID</h1>
        </div>
        <form style="width: 100%;" asp-controller="Admin" asp-action="EditQuestionSubmit">
            <input type="hidden" name="id" asp-for="@Model.questionID">
            <div class="form-group" style="max-width: 600px !important">
                <label for="code"><strong>Question Text:</strong></label>
                <input class="form-control" type="text"  asp-for="@Model.questionText">
                <span asp-validation-for="@Model.questionText" class="text-danger"></span>
            </div>
                <div class="form-group" style="max-width: 600px !important">
                <label for="code"><strong>Question Description:</strong></label>
                <input class="form-control" type="text" asp-for="@Model.questionDescription">
                <span asp-validation-for="@Model.questionDescription" class="text-danger"></span>
            </div>
            <hr>
            <ul class="list-group" style="padding-top: 5px">
                @{var i = 1; }
                @foreach (var item in Model.optionsList)
                {
                    <label for="code"><strong>Option @i:</strong></label>    
                    <input class="form-control" value="@item.optionText" asp-for="@item.optionText">
                    i++;
                }
            </ul>
            <hr>

            <div class="centerDelete form-group">
                <span><button class="btn btn-danger" type="submit">Edit</button></span>
                <div style="padding-left: 5px;">
                    <span><a asp-controller="Admin" asp-action="AllQuestions"><input type="button" class="btn btn-info" value="Cancel"></a></span>
                </div>
            </div>
        </form>
    </div>
</div>