@model Semester;

<div>
    <span><h1 class="text-center text-info">ACC Map Decision - Edit Semester <form asp-controller="Admin" asp-action="Logout" ><input class="btn btn-info" type="Submit" value="Logout"></form></h1></span>
    <span id="lblExpire" class="text-warning" style="margin-left:10px; font-size: medium;"></span>

    <div class="container">
        <div stlye="padding-bottom: 10px">
            <h1 class="text-center text-info">Editing @Model.semester_code</h1>
        </div>
        <form style="width: 100%;" asp-controller="Admin" asp-action="EditSemesterSubmit">
            <input type="hidden" asp-for="@Model.semester_id">
            <div class="form-group" style="max-width: 300px !important">
                <label for="code"><strong>Semester Code:</strong></label>
                <input class="form-control" type="text" asp-for="@Model.semester_code">
                <span asp-validation-for="@Model.semester_code" class="text-danger"></span>
            </div>
            <hr>
            <div><strong>Courses Offered in @Model.semester_code</strong></div>
            <ul class="list-group" style="padding-top: 5px">
                @foreach (var item in Model.courses)
                {
                    <li class="list-group-item">@item.course_code</li>
                }
            </ul>
            <hr>
            <div class="centerDelete form-group">
                <span><button class="btn btn-danger" type="submit">Edit</button></span>
                <div style="padding-left: 5px;">
                    <span><a asp-controller="Admin" asp-action="AllSemesters"><input type="button" class="btn btn-info" value="Cancel"></a></span>
                </div>
            </div>
        </form>
    </div>
</div>