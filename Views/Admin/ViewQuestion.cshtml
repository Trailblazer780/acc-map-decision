@model Question;

<div>
    <span><h1 class="text-center text-info">ACC Map Decision - View Semester  <form asp-controller="Admin" asp-action="Logout" ><input class="btn btn-info" type="Submit" value="Logout"></form></h1></span>
    <span id="lblExpire" class="text-warning" style="margin-left:10px; font-size: medium;"></span>
    <div class="container">
        <h1 class="text-center text-info">Viewing Semester info for question: @Model.questionID</h1>
        <div><strong>Question ID:</strong> @Model.questionID</div>
        <hr>
        <div><strong>Question Text:</strong> @Model.questionText</div>
        <hr>
        @* <div><strong>Question Description:</strong> @Model.questionDescription</div>
        <hr> *@
        @* <div><strong>Courses Offered in @Model.semester_code</strong></div>   *@
        <ul class="list-group" style="padding-top: 5px">
            @foreach (var item in Model.optionsList)
            {
                <li class="list-group-item">@item.optionText</li>
            }
        </ul>
        <hr>
        <div class="text-center">
            <a href="AllQuestions"><input type="submit" class="btn btn-info" value="Back to View Questions"/></a>
        </div>
    </div>
</div>