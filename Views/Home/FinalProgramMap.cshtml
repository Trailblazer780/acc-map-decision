@model UserResponseManager;

<div>
    <span><h1 class="text-center text-info">ACC Map Decision - Final Program Map</h1></span>
    <span id="lblExpire" class="text-warning" style="margin-left:10px; font-size: medium;"></span>

    <div class="container row">

        @foreach (var semester in Model.userResponse.programCourseMap.semesterList) {
            <div class="my-4 col-12 col-lg-4">
                <div stlye="padding-bottom: 10px">
                    <h1 class="text-center text-info">@semester.semesterTitle</h1>
                </div>

                @if (semester.coursesSelected.Count > 0) {
                    <ul class="list-group py-2 px-1 border rounded">
                        @foreach (var course in semester.coursesSelected) {
                            <div class="row small">
                                <span class="col-4 font-weight-bold">@course.courseCode</span>
                                <span class="col-8">@course.courseName</span>
                            </div>
                        }
                    </ul>
                } else {
                    <div class="text-center font-weight-bold">Nothing Selected</div>
                }
            </div>
        }
    </div>

    <div class="text-center">
        <form asp-controller="Home" asp-action="Index" ><input class="btn btn-info my-4" type="Submit" value="Go Back to Homepage"></form>
        <form asp-controller="Download" asp-action="DownloadFile" >
            <input type="hidden" asp-for="@Model.userResponseState" value="@Model.userResponseState"> 
            <input class="btn btn-success download-csv" type="Submit" value="Download as CSV">
        </form>
    </div>
</div>